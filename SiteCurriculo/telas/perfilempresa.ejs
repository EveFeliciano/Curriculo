        <section class="hero-section d-flex justify-content-center align-items-center" id="section_1">
            <div class="container">
                <div class="row">

                    <div class="col-lg-8 col-12 mx-auto">
                        <h1 class="text-white text-center">EMPREGA AÍ!</h1>

                        <h6 class="text-center">Entrega sua vaga aí, que empregamos por aqui!</h6>

                    </div>
                </div>
            </div>
        </section>

        <section class="add-job-section section-padding">
            <div class="container">
                <div class="row">
                    <div class="col-12 text-center">
                        <h2 class="mb-4">Cadastrar Nova Vaga</h2>
                    </div>
                </div>

    <div class="row">
        <div class="col-lg-8 mx-auto">
            <form id="job-form" action="/perfilempresa" method="POST">
                <div class="mb-3">
                    <label for="job-title" class="form-label">Título da Vaga</label>
                    <input type="text" class="form-control" id="titulo" name="titulo" placeholder="Ex: Web Designer" required>
                </div>
            
                <div class="mb-3">
                    <label for="job-description" class="form-label">Descrição da Vaga</label>
                    <textarea class="form-control" id="descricao" name="descricao" rows="4" placeholder="Descreva as responsabilidades e requisitos da vaga" required></textarea>
                </div>
            
                <div class="mb-3">
                    <label for="job-city" class="form-label">Cidade</label>
                    <input type="text" class="form-control" id="cidade" name="cidade" placeholder="Digite a cidade onde a vaga está disponível" required>
                </div>
            
                <div class="mb-3">
                    <label for="job-state" class="form-label">Estado</label>
                    <input type="text" class="form-control" id="estado" name="estado" placeholder="Digite o estado onde a vaga está disponível" required>
                </div>
            
                <div class="mb-3">
                    <label for="job-closing-date" class="form-label">Data de fechamento</label>
                    <input type="date" class="form-control" id="data_fechamento" name="data_fechamento" placeholder="Digite a data de fechamento da vaga" required>
                </div>
            
                <div class="mb-3">
                    <label for="job-category" class="form-label">Categoria</label>
                    <select class="form-select" id="categoria" name="categoria" required>
                        <option value="design">Design</option>
                        <option value="marketing">Marketing</option>
                        <option value="finanças">Finance</option>
                        <option value="música">Música</option>
                        <option value="educação">Educação</option>
                    </select>
                </div>
            
                <button type="submit" class="btn btn-primary">Cadastrar Vaga</button>
            </form>            
        </div>
    </div>

    <script src="js/jquery.min.js"></script>
    <script src="js/bootstrap.bundle.min.js"></script>
    <script src="js/jquery.sticky.js"></script>
